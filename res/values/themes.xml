<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="HMActionBarTheme"
           parent="@style/android:Theme.Holo">
        <item name="android:actionBarStyle">@style/HMActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/HMActionBarTabText</item>
        <item name="android:actionBarTabStyle">@style/HMNavTab</item>
        <item name="actionBarTabStyle">@style/HMNavTab</item>
         <item name="android:actionBarTabBarStyle">@style/HMNavTabBar</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:editTextBackground">@drawable/homanagergold_edit_text_holo_dark</item>
       <item name="android:editTextStyle">@style/HMEditTextStyle</item>
       <item name="android:textViewStyle">@style/HMTextViewStyle</item>
                     
    </style>

    <!-- Navigation Tabs styles -->
    <style name="HMNavTab"
           parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/hm_tabs</item>
        <item name="background">@drawable/hm_tabs</item>
        
    </style>
    
     <style name="HMNavTabBar"
           parent="@style/Widget.AppCompat.ActionBar.TabBar">
        	<item name="android:background">@color/gold</item>
        </style>      
        
        <style name="HMEditTextStyle"
           parent="@android:style/Widget.EditText">
           <item name="android:textColor">@color/gold</item>        
    </style>
    
    <style name="HMTextViewStyle"
           parent="@android:style/Widget.TextView">
           <item name="android:textColor">@color/gold</item>        
    </style>
  
    
    <!-- ActionBar styles -->
    <style name="HMActionBar"
           parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/HMActionBarTitleText</item>
        	<item name="android:background">@color/homanagergold_color</item>
        
    </style>

    <!-- ActionBar title text -->
    <style name="HMActionBarTitleText"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="HMActionBarTabText"
           parent="@style/android:Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/black</item>
    </style>



</resources>